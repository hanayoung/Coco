<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Coco" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Coco.Splash" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/red</item>

<!--        &lt;!&ndash; Use windowSplashScreenAnimatedIcon to add either a drawable or an-->
<!--             animated drawable. One of these is required. &ndash;&gt;-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/graph</item>
<!--        &lt;!&ndash; Required for animated icons &ndash;&gt;-->
<!--        <item name="windowSplashScreenAnimationDuration">200</item>-->

<!--        &lt;!&ndash; Set the theme of the Activity that directly follows your splash screen. &ndash;&gt;-->
<!--        &lt;!&ndash; Required &ndash;&gt;-->
        <item name="postSplashScreenTheme">@style/Theme.Coco</item>
    </style>
</resources>